{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ESNext"],
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "rootDir": "src",
    "outDir": "dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": true
  },
  "include": ["src/**/*.ts"]
}
